{
    "compilerOptions": {
      "module": "esnext", // 目标代码模块方式
      "outDir": "dist", // 输出目录
      "sourceMap": true,
      "target": "es5", // 目标代码平台
      "strict": true, // TS严格模式
      "jsx": "react",
      "jsxFactory": "createElement",
      "allowSyntheticDefaultImports": true, // 使用 ES2015 默认的 imports 风格
      "baseUrl": ".",
      "paths": {
        "zreact-core/*": ["./src/core/*"],
        "zreact-fiber/*": ["./src/fiber/*"],
        "zreact-render/*": ["./src/render/*"],
        "zreact-test-utils/*": ["./src/test-utils/*"],
        "zreact/*": ["./src/*"],
      },
      "typeRoots": [
        "./node_modules/@types",
        "./src/@types"
      ],
      "lib": [
        "es2015",
        "dom",
      ]
    },
    "exclude": [
      "node_modeles" // 不转换 node_modeles
    ],
    "include": [
      "./src/**/*.ts",
      "./src/**/*.tsx"
    ]
}
